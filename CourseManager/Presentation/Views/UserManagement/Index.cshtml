@model Presentation.Models.UserManagementViewModels.UserManagementIndexViewModel

@{
    ViewBag.Title = "User Management";
    Layout = "_Layout";
}

<h2>User Management</h2>

<table>
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Options</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.Role</td>
                <td><a asp-controller="UserManagement" asp-action="AddRole" asp-route-id="@user.Id">Add Role</a></td>
            </tr>
        }
    </tbody>
</table>