                    {
                       
                        <input type="submit" value="Download" />
                    }
                    @foreach (var file in ViewData["Files"] as List<string>)
                    {
                        @file
                        <br />
                    }*@
                </p>
</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Modify</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                @using (Html.BeginForm("Download", "Lectures", new { id = item.Id }, FormMethod.Post, null, new { }))
                {
                    <input type="submit" value="Download" />
                }
            </td>
        </tr>
}
    </tbody>
</table>
