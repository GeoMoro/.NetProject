@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/banner2.svg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Microsoft Visual Studio Community 2017
                    <a class="btn btn-default" href="https://www.visualstudio.com/downloads/">
                        Download
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/sqlbanner2.png" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Microsoft SQL Server
                    <a style="top: 0" class="btn btn-default" href="https://www.microsoft.com/en-us/sql-server/sql-server-downloads">
                        Download
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/net.png" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    .NET Core and FrameWork
                    <a class="btn btn-default" href="https://www.microsoft.com/net/download/windows">
                        Download
                    </a>
                </p>
            </div>
        </div>
    </div>
    
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

